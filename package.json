  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.22.11",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "commander": "^11.0.0",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "http": "0.0.1-security",
    "https": "^1.0.0",
    "rollup": "^3.28.1",
    "rollup-plugin-replace": "^2.2.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@types/babel__core": "^7.20.1",
    "@types/ejs": "^3.1.2",
